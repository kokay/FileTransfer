<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="5dp">

    <ImageView
        android:layout_width="50dp"
        app:srcCompat="@android:color/holo_blue_bright"
        android:id="@+id/processing_file_image"
        android:layout_centerVertical="true"
        android:layout_height="50dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/processing_file_image"
        android:padding="5dp"
        android:layout_toLeftOf="@+id/processing_file_check_box">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/processing_file_title"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <ProgressBar
            style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/processing_file_progress_bar" />

        <TextView
            android:text="0 KB / 100 KB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/processing_file_progress_tv"
            android:layout_gravity="right" />

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/processing_file_check_box"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false" />
</RelativeLayout>
